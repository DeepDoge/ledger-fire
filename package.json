{
	"type": "module",
	"name": "ledger-fire",
	"scripts": {
		"format": "prettier -w ./",
		"dev": "run-p --race dev:*",
		"dev:app": "vite --host",
		"dev:api": "export NODE_NO_WARNINGS=1 && node --watch --loader=tsx ./src/db/api.ts",
		"prisma:reset": "rm -rf ./prisma/migrations && rm ./prisma/dev.db && prisma migrate dev --name init && rm ./prisma/dev.db-journal",
		"build": "vite build",
		"preview": "vite preview --host",
		"postinstall": "npm run prisma:reset"
	},
	"devDependencies": {
		"@prisma/client": "^4.15.0",
		"@total-typescript/ts-reset": "^0.4.2",
		"@types/express": "^4.17.17",
		"@types/node": "^20.4.2",
		"@typescript-eslint/eslint-plugin": "^5.59.2",
		"colors": "^1.4.0",
		"express": "^4.18.2",
		"hotscript": "^1.0.13",
		"master-ts": "github:DeepDoge/master-ts#0.0.39",
		"master-ts-vite-plugin": "github:DeepDoge/master-ts-vite-plugin#0.0.13",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.8",
		"prettier-plugin-organize-imports": "^3.2.2",
		"prisma": "^5.0.0",
		"tsx": "^3.12.7",
		"typescript": "^5.1.6",
		"vite": "^4.4.4",
		"vite-plugin-singlefile": "^0.13.5",
		"zod": "^3.21.4"
	}
}
